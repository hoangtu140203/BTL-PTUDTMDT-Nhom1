@model IEnumerable<BTL_TMDT.Models.ProductContainer>
@{
    ViewBag.Title = "Sản phẩm không bán được";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sản phẩm không bán được</h2>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        border: 1px solid gray; /* Thêm border cho bảng */
    }

    th, td {
        padding: 8px;
        text-align: left;
        border: 1px solid gray;
    }

    thead {
        background-color: aqua;
    }

    th {
        background-color: #f2f2f2;
    }

    tbody > tr:hover {
        background-color: #f5f5f5;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Tên sản phẩm</th>
            <th>Tổng số lượng bán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.category_name</td>
                <td>@product.product_name</td>
                <td>@product.totalquantitysold</td>
            </tr>
        }
    </tbody>
</table>
