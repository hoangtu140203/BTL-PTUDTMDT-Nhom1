        <dt>
            @Html.DisplayNameFor(model => model.is_new)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_new)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-10">
            @{
                List<BTL_TMDT.Models.Product_Images> listi = Model.Product_Images.ToList();
            }
            <table>
                <tr>
                    <td>
                        <label>Ảnh 1</label>
                        <br />
                        <img src="@Url.Content("~/Images/" + listi[0].image_url)" alt="Anh" width="200" class="img-thumbnail" />
                    </td>
                    <td>
                        <label>Ảnh 2</label>
                        <br />
                        <img src="@Url.Content("~/Images/" + listi[1].image_url)" alt="Anh" width="200" class="img-thumbnail" />
                    </td>
                    <td>
                        <label>Ảnh 3</label>
                        <br />
                        <img src="@Url.Content("~/Images/" + listi[2].image_url)" alt="Anh" width="200" class="img-thumbnail" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về danh sách", "Index")
        </div>
    }
</div>
