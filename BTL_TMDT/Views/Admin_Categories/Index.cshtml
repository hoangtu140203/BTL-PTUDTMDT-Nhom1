@model IEnumerable<BTL_TMDT.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category_name)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.category_id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.category_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.category_id })
        </td>
    </tr>
}

</table>
